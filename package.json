{
    "name": "pcds",
    "version": "0.1.1",
    "author": "Jayden Smith <jayden@optimoawnings.com.au> (https://optimo.group)",
    "license": "MIT",
    "scripts": {
        "dev": "run-p dev:*",
        "dev:vite": "TAILWIND_MODE=watch vite",
        "dev:electron": "electron src/main/index.js",
        "build": "run-s build:*",
        "build:vite": "vite build --base=./",
        "build:electron": "electron-builder build --linux --x64"
    },
    "dependencies": {
        "@apollo/client": "^3.4.13",
        "@fortawesome/fontawesome-svg-core": "^6.1.1",
        "@fortawesome/pro-solid-svg-icons": "^6.1.1",
        "@fortawesome/vue-fontawesome": "^3.0.0-5",
        "@sentry/electron": "^3.0.7",
        "@sentry/node": "^7.1.1",
        "@sentry/tracing": "^7.1.1",
        "@sentry/vue": "^7.1.1",
        "@vue/apollo-option": "^4.0.0-alpha.20",
        "electron-context-menu": "^3.0.0",
        "electron-ipc-proxy": "^2.1.0",
        "electron-prompt": "^1.7.0",
        "electron-store": "^8.0.1",
        "electron-window-state": "^5.0.3",
        "graphql": "^15.6.0",
        "graphql-tag": "^2.12.5",
        "local-devices": "^3.2.0",
        "lodash": "^4.17.21",
        "lodash-es": "^4.17.21",
        "lottie-web": "^5.9.4",
        "tailwindcss": "^2.2.15",
        "vue": "^3.2.37",
        "vue-router": "^4.1.3"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^1.2.2",
        "@vue/compiler-sfc": "^3.2.37",
        "autoprefixer": "^10.3.5",
        "babel-eslint": "^10.1.0",
        "electron": "^20.0.1",
        "electron-builder": "^23.3.3",
        "electron-devtools-installer": "^3.2.0",
        "electron-reloader": "^1.2.1",
        "eslint": "^7.32.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-html": "^6.2.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-vue": "^7.18.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.13",
        "postcss-import": "^14.0.2",
        "postcss-inline-svg": "^5.0.0",
        "postcss-nested": "^5.0.6",
        "vite": "^2.2.4"
    },
    "peerDependencies": {
        "postcss": "^8.2.13"
    },
    "keywords": [
        "electron",
        "vue",
        "vite",
        "tailwind"
    ],
    "main": "src/main/index.js",
    "resolutions": {
        "postcss": "^8.2.13"
    },
    "engines": {
        "node": "^14.19.1"
    },
    "build": {
        "directories": {
            "output": "build"
        },
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "portable"
        },
        "linux": {
            "target": "snap"
        },
        "files": [
            "src/main/index.js",
            "src/main",
            "src/renderer",
            "dist",
            "tailwind.config.js",
            "package.json"
        ]
    }
}
